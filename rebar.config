{erl_opts, [
  warn_unused_vars,
  warnings_as_errors,
  ewarn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  debug_info
]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{profiles, [
  {test, [
    {deps, [
      {mixer, "0.1.5", {pkg, inaka_mixer}},
      {katana, "0.4.0"},
      {katana_test, "0.1.1"}
    ]}
  ]}
]}.

{ct_opts, [
  {sys_config, ["config/test.config"]}
]}.

{shell, [
  {config, ["config/test.config"]},
  {apps, [becareful]}
]}.
